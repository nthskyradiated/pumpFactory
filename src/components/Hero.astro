---
import { Image } from 'astro:assets';
import Card2 from './Card2.astro';
interface Props {
    title: string
    subtitle?: string
    body?: string
    hasImage: boolean
    image?: ImageMetadata
}
const { title, body, hasImage, image, subtitle} = Astro.props
const noImg = 'noImg'
---

<section class="Hero-wrapper">
    <div class= {!hasImage as string && noImg } >
            {hasImage && 
            <Card2>
                <Image class="img" src={image as ImageMetadata} alt="" />
            </Card2>}
        
        <div class= "container">
            <h1>{title}<span class="text-gradient">{subtitle}</span></h1>
            <span>{body}</span>
        </div>    
    </div>
</section>

<style lang="scss">
    @use '../styles/style.scss';
    @use '../styles/variables' as *;
    @use '../styles/mixins' as *;
    
    .Hero-wrapper {
        margin: auto;
        width: 75%;
        position: relative;
        text-align: center;
    }
    .noImg {
        height: 200px;
        position: relative;
    }
    
    .img {	
    width: 100%;
    height: 50%;
    object-fit: cover;
    opacity: .65;
    }
    .container :not(.text-gradient) {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        width: auto;
        height: auto;
        text-align: center;
        color: $theme-color-1;
        text-shadow: -.5px -.5px 3 #555, .5px -.5px 3 #555, -.5px 1px 3 #555, .5px .5px 1 #333;
        line-height: 3.2rem;
    }

	h1 {
		font-size: 4rem;
		font-weight: bold;
		line-height: 1;
		text-align: center;
		margin-bottom: 1em;
	}
	.text-gradient {
		@include text-gradient($direction, $colors);
        // opacity: .85;
	}

    @media (max-width: 768px) {
        .Hero-wrapper {
        margin: auto;
        width: 100%;
        position: relative;
        text-align: center;
    }
        h1 {
            font-size: 32px;
        }


    }
    @media (max-width: 480px) {
        h1 {
            font-size: 32px;


        }

    }
</style>