---
import { Image } from 'astro:assets';

interface Props {
    title: string
    subtitle?: string
    body?: string
    hasImage: boolean
    image?: ImageMetadata
}
const { title, body, hasImage, image, subtitle} = Astro.props
const noImg = 'noImg'
---

<section class="section-wrapper">
    <div class= {!hasImage as string && noImg } >
        <div class="image-wrapper">
            {hasImage && <Image class="img" src={image as ImageMetadata} alt=""/>}
        </div>
        <div class= "container">
            <h1>{title}<span class="text-gradient">{subtitle}</span></h1>
            <span>{body}</span>
        </div>    
    </div>
</section>

<style lang="scss">
    @use '../styles/style.scss';
    @use '../styles/variables' as *;
    @use '../styles/mixins' as *;
    
    .section-wrapper {
        margin: 8%;
        width: auto;
        position: relative;
    }
    .image-wrapper {
        margin: inherit;
        margin-bottom: -32px;
    }
    .noImg {
        height: 200px;
        position: relative;
    }
    
    .img {
        height: 20%;
        width: 100%;
        opacity: 75%;
        
    }
    .container {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        width: auto;
        height: auto;
        align-items: center;
        padding-bottom:24px;
        text-align: center;
        color: steelblue;
        line-height: 3.2rem;
    }

	h1 {
		font-size: 4rem;
		font-weight: bolder;
		line-height: 1;
		text-align: center;
		margin-bottom: 1em;
	}
	.text-gradient {
		@include text-gradient($direction, $colors);
        opacity: .85;
	}

    @media (max-width: 768px) {
        h1 {
            font-size: 32px;
        }


    }
    @media (max-width: 480px) {
        h1 {
            font-size: 32px;


        }

    }
</style>