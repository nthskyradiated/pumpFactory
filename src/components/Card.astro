---
import { Image } from 'astro:assets';
import _variables from '../styles/_variables.scss'
interface Props {

	src: string;
    alt: string
}
const { src, alt } = Astro.props
---


<Image class='image' src={src} alt={alt}/>

<style lang="scss">
    @use '../styles/style.scss';
    @use '../styles/variables' as *;
    @use '../styles/mixins' as *;

	.image {
	margin-bottom: 2rem;
	border: 1px transparent rgba($accent-light, 80%);
	background: linear-gradient($accent-dark, rgba($accent, 25%));
	padding: 1.5rem;
	border-radius: 8px;
	width: 120%;
    height: 100%
	}

	
	@media (max-width: 1024px) {
		.image {
			width: 100%
		}
	}
		

</style>