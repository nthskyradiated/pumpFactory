---
import { Image } from 'astro:assets';
import _variables from '../styles/_variables.scss'
interface Props {

	src: string;
    alt: string
}
const { src, alt } = Astro.props
---


<Image class='image' src={src as any} alt={alt}/>

<style lang="scss">
    @use '../styles/style.scss';
    @use '../styles/variables' as *;
    @use '../styles/mixins' as *;

	.image {
	margin-bottom: 2rem;
	border: 8px transparent rgba($accent-light, 100);
	background: linear-gradient($accent-dark, rgba(#555, 25%));
	padding: 4px;
	border-radius: 8px;
	width: 70%;
    height: 100%
	}

	
	@media (max-width: 1024px) {
		.image {
			width: 100%
		}
	}
		

</style>