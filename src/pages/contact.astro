---
import Layout from '../layouts/Layout.astro';
import pf15 from '../images/pf-015.webp'
import Hero from '../components/Hero.astro';
import {Icon} from 'astro-icon/components'
import Map from '../components/Map.astro';
import Button from '../components/Button.astro';
---

<Layout title="Contact Pump Factory">
		<Hero title='Connect With Us!' image={pf15 as any} hasImage={true} />
	<section class="contact-wrapper">
		<div class="formbold-main-wrapper">
			<div class="formbold-form-wrapper">
				<h2>Send us a message!</h2>
			  <form action="#" method="POST">
				  <div class="formbold-input-flex">
					<div>
						<input
						type="text"
						name="firstname"
						id="firstname"
						placeholder="first name"
						class="formbold-form-input"
						required
						/>
						<label for="firstname" class="formbold-form-label"> First name </label>
					</div>
					<div>
						<input
						type="text"
						name="lastname"
						id="lastname"
						placeholder="last name"
						class="formbold-form-input"
						required
						/>
						<label for="lastname" class="formbold-form-label"> Last name </label>
					</div>
				  </div>
		  
				  <div class="formbold-input-flex">
					<div>
						<input
						type="email"
						name="email"
						id="email"
						placeholder="john@mail.com"
						class="formbold-form-input"
						required
						/>
						<label for="email" class="formbold-form-label"> Mail </label>
					</div>
					<div>
						<input
						type="text"
						name="phone"
						id="phone"
						placeholder="(050) 555-0055"
						class="formbold-form-input"
						/>
						<label for="phone" class="formbold-form-label"> Phone </label>
					</div>
				  </div>
		  
				  <div class="formbold-textarea">
					  <textarea
						  rows="6"
						  name="message"
						  id="message"
						  placeholder="Write your message..."
						  class="formbold-form-input"
						  required
					  ></textarea>
					  <label for="message" class="formbold-form-label"> Message </label>
				  </div>
		  
				  <Button title='submit'>
			  </form>
			</div>
		</div>
		<div class="divider">
			<h1>OR</h1>
		</div>
		<div class="social-contact">
			<h2>Through social media</h2>
			<ul class="social-list">
				<li><a href="https://www.facebook.com/profile.php?id=61554502162958" target="blank"><Icon name="bxl:facebook-circle" width={50}/> <span>
					/ thepumpfactory
				</span>
				</a></li>
            	<li><a href="https://www.instagram.com/thepumpfactory__/" target="blank"><Icon name="bxl:instagram" width={50}/><span>/ thepumpfactory</span></a></li>
            	<li><a href="https://www.instagram.com/thepumpfactoryiloilo/" target="blank"><Icon name="bxl:whatsapp" width={50}/><span>/ thepumpfactory</span></a></li>
			</ul>
		</div>
	</section>
	<div class="map-container">
		<h1>Our Location</h1>
		<Map />
	</div>

</Layout>
<style lang="scss">
	@use '../styles/style.scss';
    @use '../styles/variables' as *;
    @use '../styles/mixins' as *;
	.contact-wrapper {
		margin: 24px auto;
		display: flex;
		flex-direction: row;
		justify-content: space-evenly;
		align-items: center;
		flex-shrink: 1;
		h1 {
			color: $txt-primary-color;
		}
		h2 {
			color: $txt-primary-color;
			margin-bottom: 2rem;
		}
	}
	.formbold-main-wrapper {
	  display: flex;
	  align-items: center;
	  justify-content: center;
	  padding: 48px;
	}
  
	.formbold-form-wrapper {
	  margin: 0 auto;
	  max-width: 800px;
	  width: 100%;
	}
  
	.formbold-input-flex {
	  display: flex;
	  gap: 20px;
	  margin-bottom: 22px;
	}
	.formbold-input-flex > div {
	  width: 80%;
	  display: flex;
	  flex-direction: column-reverse;
	}
	.formbold-textarea {
	  display: flex;
	  flex-direction: column-reverse;
	  margin-right: 4px;
	}
  
	.formbold-form-input {
	  width: 100%;
	  padding: 5px 8px;
	//   padding-left: 8px;
	  border: none;
	  border-radius: 8px;
	  border-bottom: 1px solid #DDE3EC;
	  background: $bg-secondary-color;
	  opacity: .75;
	  font-weight: 500;
	  font-size: 16px;
	  color: $bg-primary-color;
	  outline: none;
	  resize: none;
	
	}
	.formbold-form-input::placeholder {
	  color: #0f0f0f;
	}
	.formbold-form-input:focus {
	  border: $theme-color-7 1px solid;
	}
	.formbold-form-label {
	  color: whitesmoke;
	  font-weight: 500;
	  font-size: 14px;
	  line-height: 24px;
	  display: block;
	  margin-bottom: 18px;
	}
	.formbold-form-input:focus + .formbold-form-label {
	  color: $theme-color-7;
	}
  
	.social-contact {
		display: flex;
		flex-direction: column;
		justify-content: space-evenly;
		align-items: left;
		li {
			list-style: none;
			margin: 8px;
			svg {
                height: 40px;
				margin-bottom: -12px;

            }
		}
		a {
            color: $txt-primary-color;
            font-size: x-large;
         }
         a:is(:hover, :focus-within) {
		color: $theme-color-7;
		transition: .5s ease-in-out;

        }
	}
	.map-container {
		display: flex;
		flex-direction: column;
		align-items: center;
		width: 90%;
		margin: 0 auto 48px auto;
		h1	{
			margin-bottom: 16px
		}

	}

	@media (max-width: 768px) {
		.contact-wrapper {
		width: 100%;
		display: flex;
		flex-direction: column;
		justify-content: space-evenly;
		gap: 32px;
		margin-bottom: 160px;
			ul li a {
            	font-size: medium;
        	}
		}
		.map-container {
		padding-bottom: 80px;
	}
	}

	
  </style>