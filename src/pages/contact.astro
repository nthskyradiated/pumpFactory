---
import Layout from '../layouts/Layout.astro';
import pf15 from '../images/pf-015.webp'
import Hero from '../components/Hero.astro';
import { Icon } from 'astro-iconify'
---

<Layout title="Contact Pump Factory">
		<Hero title='Connect with Us!' image={pf15 as any} hasImage={true} />
	<section class="contact-wrapper">
		<div class="formbold-main-wrapper">
			<div class="formbold-form-wrapper">
				<h2>Send us a message!</h2>
			  <form action="#" method="POST">
				  <div class="formbold-input-flex">
					<div>
						<input
						type="text"
						name="firstname"
						id="firstname"
						placeholder="firstname"
						class="formbold-form-input"
						/>
						<label for="firstname" class="formbold-form-label"> First name </label>
					</div>
					<div>
						<input
						type="text"
						name="lastname"
						id="lastname"
						placeholder="lastname"
						class="formbold-form-input"
						/>
						<label for="lastname" class="formbold-form-label"> Last name </label>
					</div>
				  </div>
		  
				  <div class="formbold-input-flex">
					<div>
						<input
						type="email"
						name="email"
						id="email"
						placeholder="jhon@mail.com"
						class="formbold-form-input"
						/>
						<label for="email" class="formbold-form-label"> Mail </label>
					</div>
					<div>
						<input
						type="text"
						name="phone"
						id="phone"
						placeholder="(050) 555-0055"
						class="formbold-form-input"
						/>
						<label for="phone" class="formbold-form-label"> Phone </label>
					</div>
				  </div>
		  
				  <div class="formbold-textarea">
					  <textarea
						  rows="6"
						  name="message"
						  id="message"
						  placeholder="Write your message..."
						  class="formbold-form-input"
					  ></textarea>
					  <label for="message" class="formbold-form-label"> Message </label>
				  </div>
		  
				  <button class="formbold-btn">
					  Send Message
				  </button>
			  </form>
			</div>
		</div>
		<div class="divider">
			<h1>OR</h1>
		</div>
		<div class="social-contact">
			<h2>Through our social media</h2>
			<ul class="social-list">
				<li><a href="https://www.facebook.com/profile.php?id=61554502162958" target="blank"><Icon name="bxl:facebook-circle" />/ thepumpfactory</a></li>
            	<li><a href="https://www.instagram.com/thepumpfactory__/" target="blank"><Icon name="bxl:instagram" />/ thepumpfactory</a></li>
            	<li><a href="https://www.instagram.com/thepumpfactoryiloilo/" target="blank"><Icon name="bxl:whatsapp" />thepumpfactory</a></li>
			</ul>
		</div>
	</section>
	<div id="map">
	</div>

</Layout>
<style lang="scss">
	@use '../styles/style.scss';
    @use '../styles/variables' as *;
    @use '../styles/mixins' as *;
	.contact-wrapper {
		margin: 24px auto;
		display: flex;
		flex-direction: row;
		justify-content: space-evenly;
		align-items: center;
		flex-shrink: 1;
		h1 {
			color: $txt-primary-color;
		}
		h2 {
			color: $txt-primary-color;
			margin-bottom: 2rem;
		}
	}
	.formbold-main-wrapper {
	  display: flex;
	  align-items: center;
	  justify-content: center;
	  padding: 48px;
	}
  
	.formbold-form-wrapper {
	  margin: 0 auto;
	  max-width: 800px;
	  width: 100%;
	}
  
	.formbold-input-flex {
	  display: flex;
	  gap: 20px;
	  margin-bottom: 22px;
	}
	.formbold-input-flex > div {
	  width: 80%;
	  display: flex;
	  flex-direction: column-reverse;
	}
	.formbold-textarea {
	  display: flex;
	  flex-direction: column-reverse;
	}
  
	.formbold-form-input {
	  width: 100%;
	  padding-bottom: 10px;
	  border: none;
	  border-bottom: 1px solid #DDE3EC;
	  background: $bg-secondary-color;
	  opacity: .75;
	  font-weight: 500;
	  font-size: 16px;
	  color: $bg-primary-color;
	  outline: none;
	  resize: none;
	}
	.formbold-form-input::placeholder {
	  color: #0f0f0f;
	}
	.formbold-form-input:focus {
	  border: teal 1px solid;
	}
	.formbold-form-label {
	  color: whitesmoke;
	  font-weight: 500;
	  font-size: 14px;
	  line-height: 24px;
	  display: block;
	  margin-bottom: 18px;
	}
	.formbold-form-input:focus + .formbold-form-label {
	  color: teal;
	}
  
	.formbold-btn {
	  font-size: 16px;
	  border-radius: 5px;
	  padding: 12px 25px;
	  border: none;
	  font-weight: 500;
	  background-color: $theme-color-5;
	  color: $txt-primary-color;
	  cursor: pointer;
	  margin-top: 25px;
	}
  
	.social-contact {
		display: flex;
		flex-direction: column;
		justify-content: space-evenly;
		align-items: left;
		li {
			list-style: none;
			margin: 8px;
			svg {
                height: 32px;
				padding-right: 16px;
				margin-top: 4px;
				margin-bottom: -12px;
            }
		}
		a {
            color: $txt-primary-color;
            font-size: x-large;
         }
         a:is(:hover, :focus-within) {
		color: $theme-color-1;
		transition: .5s ease-in-out;

        }
	}

			#map {
		width: 100%;
		height: 250%;
		border-radius: 10px;
			
		}
		iframe {
		width: 85%;
		height: 250%;
		border-radius: 10px;
		margin: auto;
			
		}
	@media (max-width: 768px) {
		.contact-wrapper {
		width: 100%;
		display: flex;
		flex-direction: column;
		justify-content: space-evenly;
		gap: 32px;
		margin-bottom: 160px;
			ul li a {
            	font-size: medium;
        	}
		}
	}
  </style>
<script>
	// import mapboxgl from "mapbox-gl";
	mapboxgl.accessToken = import.meta.env.MAPBOX_API
	var map = new mapboxgl.Map({
	  container: 'map',
	  style: 'mapbox://styles/mapbox/streets-v11',
	  center: [55.28317203282275, 25.217735871271184],
	  zoom: 18,
	});
</script>