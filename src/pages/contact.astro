---
import Layout from '../layouts/Layout.astro';
import Card2 from '../components/Card2.astro';
import pf5 from '../images/pf5.jpg'
import Hero from '../components/Hero.astro';
import { Icon } from 'astro-iconify'
---

<Layout title="Welcome to Pump Factory">
	<Card2>
		<Hero title='Connect with Us!' image={pf5} hasImage="true"/>
	</Card2>

	<main>
		<div class="formbold-main-wrapper">
			<div class="formbold-form-wrapper">
			  <form action="#" method="POST">
				  <div class="formbold-input-flex">
					<div>
						<input
						type="text"
						name="firstname"
						id="firstname"
						placeholder="firstname"
						class="formbold-form-input"
						/>
						<label for="firstname" class="formbold-form-label"> First name </label>
					</div>
					<div>
						<input
						type="text"
						name="lastname"
						id="lastname"
						placeholder="lastname"
						class="formbold-form-input"
						/>
						<label for="lastname" class="formbold-form-label"> Last name </label>
					</div>
				  </div>
		  
				  <div class="formbold-input-flex">
					<div>
						<input
						type="email"
						name="email"
						id="email"
						placeholder="jhon@mail.com"
						class="formbold-form-input"
						/>
						<label for="email" class="formbold-form-label"> Mail </label>
					</div>
					<div>
						<input
						type="text"
						name="phone"
						id="phone"
						placeholder="(050) 555-0055"
						class="formbold-form-input"
						/>
						<label for="phone" class="formbold-form-label"> Phone </label>
					</div>
				  </div>
		  
				  <div class="formbold-textarea">
					  <textarea
						  rows="6"
						  name="message"
						  id="message"
						  placeholder="Write your message..."
						  class="formbold-form-input"
					  ></textarea>
					  <label for="message" class="formbold-form-label"> Message </label>
				  </div>
		  
				 
		  
				  <button class="formbold-btn">
					  Send Message
				  </button>
			  </form>
			</div>
		</div>
		<div class="divider">
			<h1>OR</h1>
		</div>
		<div class="social-contact">
			<ul class="social-list">
				<li><a href="https://www.facebook.com/thepumpfactoryiloilo" target="blank"><Icon name="bxl:facebook-circle" />facebook.com/thepumpfactoryiloilo</a></li>
            	<li><a href="https://www.instagram.com/thepumpfactoryiloilo/" target="blank"><Icon name="bxl:instagram" />instagram.com/thepumpfactoryiloilo</a></li>
            	<li><a href="https://www.instagram.com/thepumpfactoryiloilo/" target="blank"><Icon name="bxl:whatsapp" />thepumpfactoryiloilo</a></li>
			</ul>
		</div>
	</main>
</Layout>
<style lang="scss">
	@use '../styles/style.scss';
    @use '../styles/variables' as *;
    @use '../styles/mixins' as *;
	@import url('https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap');

	main {
		margin: 24px auto;
		display: flex;
		flex-direction: row;
		justify-content: space-evenly;
		align-items: center;
		
		h1 {
			color: $txt-primary-color;
		}
	}
	.formbold-main-wrapper {
	  display: flex;
	  align-items: center;
	  justify-content: center;
	  padding: 48px;
	}
  
	.formbold-form-wrapper {
	  margin: 0 auto;
	  max-width: 550px;
	  width: 100%;
	  /* background: white; */
	}
  
	.formbold-input-flex {
	  display: flex;
	  gap: 20px;
	  margin-bottom: 22px;
	}
	.formbold-input-flex > div {
	  width: 50%;
	  display: flex;
	  flex-direction: column-reverse;
	}
	.formbold-textarea {
	  display: flex;
	  flex-direction: column-reverse;
	}
  
	.formbold-form-input {
	  width: 100%;
	  padding-bottom: 10px;
	  border: none;
	  border-bottom: 1px solid #DDE3EC;
	  background: $bg-secondary-color;
	  opacity: .75;
	  font-weight: 500;
	  font-size: 16px;
	  color: #0f0f0f;
	  outline: none;
	  resize: none;
	}
	.formbold-form-input::placeholder {
	  color: #0f0f0f;
	}
	.formbold-form-input:focus {
	  border-color: teal;
	}
	.formbold-form-label {
	  color: whitesmoke;
	  font-weight: 500;
	  font-size: 14px;
	  line-height: 24px;
	  display: block;
	  margin-bottom: 18px;
	}
	.formbold-form-input:focus + .formbold-form-label {
	  color: teal;
	}
  
	.formbold-input-file {
	  margin-top: 30px;
	}
	.formbold-input-file input[type="file"] {
	  position: absolute;
	  top: 6px;
	  left: 0;
	  z-index: -1;
	}
	.formbold-input-file .formbold-input-label {
	  display: flex;
	  align-items: center;
	  gap: 10px;
	  position: relative;
	}
  
	.formbold-filename-wrapper {
	  display: flex;
	  flex-direction: column;
	  gap: 6px;
	  margin-bottom: 22px;
	}
	.formbold-filename {
	  display: flex;
	  align-items: center;
	  justify-content: space-between;
	  font-size: 14px;
	  line-height: 24px;
	  color: #536387;
	}
	.formbold-filename svg {
	  cursor: pointer;
	}
  
	.formbold-btn {
	  font-size: 16px;
	  border-radius: 5px;
	  padding: 12px 25px;
	  border: none;
	  font-weight: 500;
	  background-color: #6A64F1;
	  color: white;
	  cursor: pointer;
	  margin-top: 25px;
	}
	.formbold-btn:hover {
	  box-shadow: 0px 3px 8px rgba(0, 0, 0, 0.05);
	}
  
	.social-contact {
		display: flex;
		flex-direction: column;
		justify-content: space-evenly;
		align-items: left;
		li {
			list-style: none;
			margin: 8px;
			svg {
                height: 32px;
				padding-right: 16px;
				margin-top: 4px;
				margin-bottom: -12px;
            }
		}
		a {
            color: $txt-primary-color;
            font-size: x-large;
         }
         a:hover {
            opacity: .65;
        }
	}

	@media (max-width: 768px) {
		main {
		display: flex;
		flex-direction: column;
	}
	}
  </style>