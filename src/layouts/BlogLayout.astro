---
interface Props {
	title: string;
}

const { title } = Astro.props;

import Header from '../components/Header.astro'
import Footer from '../components/Footer.astro'
import Hamburger from '../components/Hamburger.astro';

---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Code and Y Website" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="icon" type="image/svg" href="../../public/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<script is:inline src="https://kit.fontawesome.com/72852e9073.js" crossorigin="anonymous"></script>
		<title>{title}</title>

		</head>
	<body>
		<Header title={'Debug the Mind Journals'} subtitle={'Wait... You blog?!'} />
		<Hamburger />
		<div class="container">
			<slot />
		</div>
		<Footer />

	</body>

</html>
<script>
	import '../scripts/hamburger.js'
  </script>
<style is:global lang="scss">
	@use '../styles/style.scss';
    @use '../styles/variables' as *;
    @use '../styles/mixins' as *;

</style>
